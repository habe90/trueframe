{
  "name": "trueframe/trueframe",
  "description": "TrueFrame application skeleton",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "trueframe/framework": "^0.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "bootstrap/helpers.php"
    ]
  },
  "bin": [
    "trueframe"
  ],
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php trueframe key:generate",
      "@php trueframe cache:clear"
    ],
    "post-autoload-dump": [
      "@php trueframe optimize || exit 0"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}